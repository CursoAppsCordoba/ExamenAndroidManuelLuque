<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.example.usuario.examenandroidmanuelluque.Baja_Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="54dp"
        android:text="Nombre"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/bnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/bnombre"
        android:layout_marginTop="57dp"
        android:text="Email"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/bemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bnombre"
        android:layout_alignRight="@+id/bnombre"
        android:layout_below="@+id/bnombre"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/TextView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/bemail"
        android:layout_marginTop="67dp"
        android:text="Edad"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/bedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView12"
        android:layout_alignBottom="@+id/TextView12"
        android:layout_alignLeft="@+id/bemail"
        android:layout_alignStart="@+id/bemail"
        android:ems="10"
        android:hint="0"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btbaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView12"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/TextView12"
        android:layout_marginBottom="93dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:text="Baja" />

    <Button
        android:id="@+id/btcancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btbaja"
        android:layout_alignBottom="@+id/btbaja"
        android:layout_alignEnd="@+id/bedad"
        android:layout_alignRight="@+id/bedad"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:background="#FFFFFF"
        android:onClick="onClick"
        android:text="Cancelar" />
</RelativeLayout>
